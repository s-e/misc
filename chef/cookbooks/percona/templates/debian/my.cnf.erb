[mysql]

# CLIENT #
port                           = 3306
socket                         = <%= node['percona']['socket'] %>

[mysqld]

# GENERAL #
user                           = mysql
default-storage-engine         = InnoDB
socket                         = <%= node['percona']['socket'] %>
pid-file                       = <%= node['percona']['pid_file'] %>
bind-address                   = <%= node['percona']['bind_address'] %>
basedir                        = <%= node['percona']['basedir'] %>
skip-external-locking

# MyISAM #
key-buffer-size                = <%= node['percona']['tunable']['key_buffer'] %>
myisam-recover                 = FORCE,BACKUP

# SAFETY #
max-allowed-packet             = <%= node['percona']['tunable']['max_allowed_packet'] %>
max-connect-errors             = 1000000
skip-name-resolve
sysdate-is-now                 = 1
innodb                         = FORCE

# DATA STORAGE #
datadir                        = <%= node['percona']['data_dir'] %>

# BINARY LOGGING #
#log-bin                        = /var/lib/mysql/mysql-bin
expire-logs-days               = <%= node['percona']['tunable']['expire_logs_days'] %>
sync-binlog                    = 1

# CACHES AND LIMITS #
tmp-table-size                 = 32M
max-heap-table-size            = <%= node['percona']['tunable']['max_heap_table_size'] %>
query-cache-type               = 0
query-cache-size               = <%= node['percona']['tunable']['query_cache_size'] %>
max-connections                = <%= node['percona']['tunable']['max_connections'] %>
thread-cache-size              = <%= node['percona']['tunable']['thread_cache_size'] %>
open-files-limit               = 65535
table-definition-cache         = 1024
table-open-cache               = 2048

# INNODB #
innodb-flush-method            = O_DIRECT
innodb-log-files-in-group      = 2
innodb-log-file-size           = 128M
innodb-flush-log-at-trx-commit = 1
innodb-file-per-table          = 1
innodb-buffer-pool-size        = <%= node['percona']['tunable']['innodb_buffer_pool_size'] %>

# LOGGING #
log-error                      = /var/lib/mysql/mysql-error.log
log-queries-not-using-indexes  = 1
slow-query-log                 = 1
slow-query-log-file            = /var/lib/mysql/mysql-slow.log

